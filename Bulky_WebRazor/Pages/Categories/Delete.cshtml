@page
@model Bulky_WebRazor.Pages.Categories.DeleteModel

<form method="post">

    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Category
            </h2>
        </div>
        @*        <div asp-validation-summary="All"> </div>*@
        <div />

        <div class="mb-3 row">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" disabled class="form-control" />

        </div>
        <div class="mb-3 row">
            <label asp-for="Category.Display_Order" class="p-0"></label>
            <input asp-for="Category.Display_Order" disabled class="form-control" />

        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/index" class="btn btn-danger form-control">Cancel</a>
            </div>

        </div>


    </div>
</form>
