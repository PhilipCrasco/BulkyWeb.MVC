@using Bulky.Models.Model;
 @model  List<Product>


<div class="container p-3 ">

    <div class=" row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>

        </div>

        <div class="col-6 text-end">
            <a asp-controller="Products" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>   Add New Products
            </a>
        </div>

    </div>
    <br />

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Titles
                    </th>
                    <th>
                        Description
                    </th>

                    <th>
                        ISBN
                    </th>
                    <th>
                        Author
                    </th>
@*                      <th>
                        ListPrice
                    </th>*@
                    <th>
                        Price
                    </th>
@*                    <th>
                        Price50
                    </th>
                    <th>
                         Price500
                    </th>*@
                    <th>
                        Category
                    </th>

                    <th>
                        Action
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(x => x.Id))
                {
                    <tr>

                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Title
                        </td>
                        <td >
                             @Html.Raw(item.Description)        
                        </td>
                        <td>
                            @item.ISBN
                        </td>
                        <td>
                            @item.Author
                        </td>
@*                        <td>
                            @item.ListPrice
                        </td>*@
                        <td>
                            @item.Price
                        </td>
@*                        <td>
                            @item.Price50
                        </td>
                        <td>
                            @item.Price500
                        </td>*@
                        <td>
                            @item.Category.Name
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Products" asp-action="Upsert" asp-route-Id="@item.Id" class="btn border btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a asp-controller="Products" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
